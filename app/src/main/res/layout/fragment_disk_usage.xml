<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/RunningProcessesFragmentWrapper">
	<LinearLayout
        android:orientation="vertical"
		android:id="@+id/lvHolder"
        android:visibility="visible"
        android:weightSum="2"
		style="@style/centeredFullsizeHidden">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.hasmobi.rambo.utils.custom_views.StatsBlock
                android:id="@+id/statsBlockInternal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></com.hasmobi.rambo.utils.custom_views.StatsBlock>
            </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.hasmobi.rambo.utils.custom_views.StatsBlock
                android:id="@+id/statsBlockSd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></com.hasmobi.rambo.utils.custom_views.StatsBlock>
            </LinearLayout>
	</LinearLayout>
	<TextView
        android:visibility="gone"
		android:id="@+id/tvRunningProcessesPlaceholder"
		style="@style/runningProcessesPlaceholder"
		android:text="@string/loading" />
</LinearLayout>