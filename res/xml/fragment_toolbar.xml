<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/llToolbar" style="@style/toolbarFragmentWrapper"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_marginBottom="@dimen/padding_medium"
		android:layout_marginTop="@dimen/padding_medium" android:gravity="center_horizontal"
		android:orientation="horizontal" android:weightSum="100">
		<TextView android:id="@+id/tvToolbarLeft" style="@style/toolbarLeftTv"
			android:text="left" />

		<Button android:id="@+id/bOptimize" style="@style/bOptimize"
			android:text="@string/instant_optimize">
		</Button>

		<TextView android:id="@+id/tvToolbarRight" style="@style/toolbarRightTv"
			android:text="right" />
	</LinearLayout>

</LinearLayout>