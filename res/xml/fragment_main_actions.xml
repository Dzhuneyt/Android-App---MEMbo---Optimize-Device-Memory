<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainActionsFragmentWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10" >
        <fragment
            android:name="com.hasmobi.rambo.fragments.child.FragmentPie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            tools:layout="@xml/fragment_pie" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tvMainActionsLabelTotalRam"
                style="@style/MainActionLabel"
                android:text="N mb total" />
            <TextView
                android:id="@+id/tvMainActionsLabelAvailableRam"
                style="@style/MainActionLabel"
                android:text="N mb available" />
            <TextView
                android:id="@+id/tvMainActionsLabelRunningApps"
                style="@style/MainActionLabel"
                android:text="23 apps running" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llMainActionRow1"
        style="@style/MainActionRow2Elems" >
        <com.hasmobi.rambo.utils.custom_views.MainActionButton
            android:id="@+id/actOpenRunningApps"
            style="@style/MainActionButton"
            android:text="@string/running_processes" />
        <com.hasmobi.rambo.utils.custom_views.MainActionButton
            android:id="@+id/actOpenWhitelist"
            style="@style/MainActionButton"
            android:text="@string/app_whitelist" />
    </LinearLayout>

</LinearLayout>